<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="35dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="35dp"
    android:layout_marginBottom="10dp"
    android:elevation="8dp"
    app:cardBackgroundColor="#E4E4E4"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/imageStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="4dp"
            android:contentDescription="@string/star_review"
            app:srcCompat="@drawable/clip_icon"
            app:tint="@color/dark_gold" />

        <TextView
            android:id="@+id/txtIdComplaintFile"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:gravity="center_vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="@string/complaint_file"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtNameComplaintFile"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtIdComplaintFile"
            android:layout_centerHorizontal="false"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:elevation="10dp"
            android:gravity="center_vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/dark_gray"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnComplaintFileOpen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/btn_primary"
            android:gravity="center_horizontal|center_vertical"
            android:minHeight="30dip"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:text="@string/open"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:textStyle="normal"
            app:icon="?android:attr/actionModeFindDrawable"
            app:iconGravity="textStart"
            app:iconPadding="5sp"
            app:iconSize="20dp"
            app:iconTint="@color/black"
            tools:ignore="RelativeOverlap,TextContrastCheck,TouchTargetSizeCheck" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>