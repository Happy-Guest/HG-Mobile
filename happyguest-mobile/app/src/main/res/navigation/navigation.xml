<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="ipl.estg.happyguest.app.home.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/nav_profile"
        android:name="ipl.estg.happyguest.app.home.profile.ProfileFragment"
        android:label="@string/menu_profile"
        tools:layout="@layout/fragment_profile" />
    <action
        android:id="@+id/action_nav_profile"
        app:destination="@id/nav_profile"
        app:enterAnim="@anim/slide_in_left"
        app:exitAnim="@anim/slide_out_left" />
    <fragment
        android:id="@+id/nav_code"
        android:name="ipl.estg.happyguest.app.home.code.CodeFragment"
        android:label="@string/menu_code"
        tools:layout="@layout/fragment_code" />
    <fragment
        android:id="@+id/nav_password"
        android:name="ipl.estg.happyguest.app.home.profile.PasswordFragment"
        android:label="@string/menu_password"
        tools:layout="@layout/fragment_password" />
    <action
        android:id="@+id/action_nav_password"
        app:destination="@id/nav_password"
        app:enterAnim="@anim/fade_in"
        app:exitAnim="@anim/fade_out" />
    <action
        android:id="@+id/action2_nav_profile"
        app:destination="@id/nav_profile"
        app:enterAnim="@anim/fade_in"
        app:exitAnim="@anim/fade_out" />

</navigation>